<div class="container">
  <div class="row center-align">
    <h3>Welcome to Good Burger. Home of the Good Burger.</h3>
    <div class="col s4 offset-s4 center-align">
      <img src="/images/Hamburger_icon.png">
    </div>
  </div>
  <div class="row">
    <div class="col s6">
      <h4>Ready-to-Eat</h4>
      <ul class="collection">
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/uneaten-block devoured = false}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col s6">
      <h4>Sold Out/Eaten</h4>
      <ul class="collection">
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/eaten-block devoured = true}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row center-align">
    <h5>Add a New Menu Item</h5>
    <div class="col s6 offset-s3">
      <textarea id="burgerinput"></textarea>
      <button id="submit" class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
    </div>
  </div>
</div>