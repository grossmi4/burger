<div class="container">
  <div class="row">
    <div class="col s4 offset-s4">
      <span>Burger Place-Holder</span>
    </div>
  </div>
  <div class="row">
    <div class="col s6">
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/uneaten-block devoured = false}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col s6">
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/eaten-block devoured = true}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col s6 offset-s3">
      <textarea id="burgerinput"></textarea>
      <button id="submit" class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
    </div>
  </div>
</div>